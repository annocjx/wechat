<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
	<!-- 为这个mapper指定一个唯一的namespace，namespace的值习惯上设置成包名+sql映射文件名，这样就能够保证namespace的值是唯一的 
	例如namespace="me.gacl.mapping.userMapper"就是me.gacl.mapping(包名)+userMapper(userMapper.xml文件去除后缀) -->
<mapper namespace="manageUserDaoImpl">
	<!-- 在select标签中编写查询的SQL语句， 设置select标签的id属性为getUser，id属性值必须是唯一的，不能够重复.
		使用parameterType属性指明查询时使用的参数类型，
		resultType属性指明查询返回的结果集类型 
		resultType="com.cdeledu.model.rbac.SysUser"就表示将查询结果封装成一个ManagerUser类的对象返回 
		ManagerUser类就是sys_manageruser表所对应的实体类 -->
	<sql id="findForJdbc_body">
		SELECT * from sys_user
		<where>
			<if test="userName != null and userName != '' ">  
				and userName  LIKE CONCAT(CONCAT('%', #{userName}),'%') 
			</if>
			<if test="password != null and password != '' ">  
				and password =#{password} 
			</if>
			<if test="usertype != null and usertype != ''">
				and usertype=#{usertype}
			</if>
			<if test="realname != null and realname != '' ">  
				and realname=#{realname}
			</if>
			<if test="email != null and email != '' "> 
				and email  LIKE CONCAT(CONCAT('%', #{email}),'%')
			</if>
			<if test="emailstatus != null and emailstatus != '' ">
				and emailstatus=#{emailstatus} 
			</if>
			<if test="usersex != null and usersex != '' ">
				and usersex=#{usersex}
			</if>
			<if test="mobile != null and mobile != '' ">
				and mobile like '%${mobile}$%'
			</if>
			<if test="telephone != null and telephone != '' ">
				and telephone like '%${telephone}$%'
			</if>
			<if test="isVisible != null and isVisible != '' ">
				and isVisible=#isVisible#
			</if>
			<if test="isEnabled != null and isEnabled != '' ">
				and isEnabled=#isEnabled#
			</if>
		</where>
	</sql>
	
	<select id="findForJdbc"  parameterType="com.cdeledu.model.rbac.SysUser"
		resultType="com.cdeledu.model.rbac.SysUser">
		select * from(
			<include refid="findForJdbc_body"/>
		) as myTable LIMIT #{startRow},#{rows}
	</select>
	
	<select id="getCountForJdbcParam" parameterType="com.cdeledu.model.rbac.SysUser"
		resultType="java.lang.Integer">
		select count(*) from(
			<include refid="findForJdbc_body"/>
		) as myTable
	</select>
	
	<select id="findOneForJdbc" parameterType="com.cdeledu.model.rbac.SysUser"
		resultType="com.cdeledu.model.rbac.SysUser">
		select * from(
			<include refid="findForJdbc_body"/>
		) as myTable LIMIT 1
	</select>
	
	<!-- 验证用户是否存在 -->
	<select id="checkUserExits" parameterType="com.cdeledu.model.rbac.SysUser"
		resultType="com.cdeledu.model.rbac.SysUser">
			SELECT * from sys_user WHERE userName =#{userName} AND `password` = #{password} and isEnabled =1
	</select>
	
	<!-- 创建新的用户 -->
	<insert id="insertSelective" parameterType="com.cdeledu.model.rbac.SysUser" 
		useGeneratedKeys="true" keyProperty="id" >
		insert into sys_user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="username != null">userName,</if>
			<if test="password != null">password,</if>
			<if test="usertype != null">userType,</if>
			<if test="realname != null">realName,</if>
			<if test="email != null">email,</if>
			<if test="emailstatus != null">emailstatus,</if>
			<if test="usersex != null">userSex,</if>
			<if test="mobile != null">mobile,</if>
			<if test="telephone != null">telephone,</if>
			<if test="signature != null">signature,</if>
			<if test="remark != null">remark,</if>
			<if test="createtime != null">createTime,</if>
		</trim>
		values 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="username != null">#{username},</if>
			<if test="password != null">#{password},</if>
			<if test="usertype != null">#{usertype},</if>
			<if test="realname != null">#{realname},</if>
			<if test="email != null">#{email},</if>
			<if test="emailstatus != null">#{emailstatus},</if>
			<if test="usersex != null">#{usersex},</if>
			<if test="mobile != null">#{mobile},</if>
			<if test="telephone != null">#{telephone},</if>
			<if test="signature != null">#{signature},</if>
			<if test="remark != null">#{remark},</if>
			<if test="createtime != null">#{createtime},</if>
		</trim>
	</insert>
	
	<!-- 更新 -->
	<update id="updateByPrimaryKey" parameterType="com.cdeledu.model.rbac.SysUser" >
		update sys_user
		<trim prefix="SET" suffix="" suffixOverrides=",">
			<if test="userName != null and userName != " > 
				userName = #{username},
			</if>
			<if test="password != null and password != '' " >
				password = #{password},
			</if>
			<if test="usertype != null and usertype != ''" >
				userType = #{usertype},
			</if>
			<if test="realname != null and realname != '' ">
				realName = #{realname},
			</if>
			<if test="email != null and email != '' " >
				email = #{email},
			</if>
			<if test="emailstatus != null and emailstatus != '' " >
				emailstatus = #{emailstatus},
			</if>
			<if test="usersex != null and usersex != '' ">
				userSex = #{usersex},
			</if>
			<if test="mobile != null and mobile != '' ">
				mobile = #{mobile},
			</if>
			<if test="telephone != null and telephone != '' ">
				telephone = #{telephone},
			</if>
			<if test="signature != null and signature != '' " > 
				signature = #{signature},
			</if>
			<if test="isVisible != null and isVisible != '' " > 
				isVisible = #{isVisible},
			</if>
			<if test="isEnabled != null and isEnabled != '' " >
				isEnabled = #{isEnabled},
			</if>
			<if test="remark != null AND remark != '' " > 
				remark = #{remark},
			</if>
		</trim>
		where id = #{id}
	</update>
	
	<!-- 删除:支持批量删除 -->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Object" >
		delete from sys_user where id in 
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<!-- 一旦参数没有传，会删除所有 -->
	<delete id="delete" parameterType="com.cdeledu.model.rbac.SysUser"  >
		delete from sys_user
		<where>
			<if test="realname != null and realname != '' ">  
				and realname=#{realname}
			</if>
			<if test="email != null and email != '' "> 
				and email =#{email}
			</if>
			<if test="emailstatus != null and emailstatus != '' ">
				and emailstatus=#{emailstatus} 
			</if>
			<if test="usersex != null and usersex != '' ">
				and usersex=#{usersex}
			</if>
			<if test="mobile != null and mobile != '' ">
				and mobile #{mobile}
			</if>
			<if test="telephone != null and telephone != '' ">
				and telephone #{telephone}
			</if>
			<if test="isEnabled != null and isEnabled != '' ">
				and isEnabled=#isEnabled#
			</if>
		</where>
	</delete>
	
	<!-- 获取用户的角色  -->
	<select id="getUserRole" parameterType="com.cdeledu.model.rbac.SysUser"
		resultType="com.cdeledu.model.rbac.SysUserRole">
		SELECT 	
			smur.userId,smur.roleId,smr.roleName 
		FROM 
			sys_user_role smur
		INNER JOIN sys_role smr ON smr.id = smur.roleId AND smr.isEnabled = 1
		WHERE smur.userId =#{id} 
	</select>
	
	<!-- 保存用户-角色关联关系 -->
	<insert id="saveRoleUser" parameterType="com.cdeledu.model.rbac.SysUserRole" 
		useGeneratedKeys="true" keyProperty="id" >
		insert  into sys_user_role (roleId, userId) 
		values
			(#{roleid,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER} 
	</insert>
	
	<!-- 保存管理员登录信息 -->
	<insert id="saveLoginInfo" parameterType="com.cdeledu.model.rbac.SysUserRole" 
		useGeneratedKeys="true" keyProperty="id" >
		
	</insert>
	
	<!-- 删除用户角色关联数据 -->
	<delete id="deleteUserRole" parameterType="com.cdeledu.model.rbac.SysUser">
	
	</delete>
	
	<!-- 更新登录信息，如：登录IP、登录时间 -->
	<update id="updateLoginInfo" parameterType="com.cdeledu.model.rbac.SysUser" >
	
	</update>
</mapper>