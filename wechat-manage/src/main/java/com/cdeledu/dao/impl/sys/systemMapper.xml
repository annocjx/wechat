<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdeledu.dao.impl.sys.systemMapper">

	<insert id="insertSelective" parameterType="com.cdeledu.model.system.SysLogEntity"
		useGeneratedKeys="true" keyProperty="id">
		insert into sys_log
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userCode != null">
				userCode,
			</if>
			<if test="ipAddress != null">
				ipAddress,
			</if>
			<if test="opType != null">
				opType,
			</if>
			<if test="time != null">
				`time`,
			</if>
			<if test="method != null">
				`method`,
			</if>
			<if test="browser != null">
				browser,
			</if>
			<if test="params != null">
				params,
			</if>
			<if test="tableName != null">
				tableName,
			</if>
			<if test="logType != null">
				logType,
			</if>
			<if test="exceptionCode != null">
				exceptionCode,
			</if>
			<if test="exceptionDetail != null">
				exceptionDetail,
			</if>
			<if test="remark != null and remark != '' ">
				remark,
			</if>
			<if test="opResult != null and opResult != '' ">
				opResult,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="userCode != null">
				#{userCode},
			</if>
			<if test="ipAddress != null">
				#{ipAddress},
			</if>
			<if test="opType != null">
				#{opType},
			</if>
			<if test="time != null">
				#{time},
			</if>
			<if test="method != null">
				#{method},
			</if>
			<if test="browser != null">
				#{browser},
			</if>
			<if test="params != null">
				#{params},
			</if>
			<if test="tableName != null">
				#{tableName},
			</if>
			<if test="logType != null">
				#{logType},
			</if>
			<if test="exceptionCode != null">
				#{exceptionCode},
			</if>
			<if test="exceptionDetail != null">
				#{exceptionDetail},
			</if>
			<if test="remark != null and remark != '' ">
				#{remark},
			</if>
			<if test="opResult != null and opResult != '' ">
				#{opResult},
			</if>
		</trim>
	</insert>
	
	<select id="getTablesList" resultType="com.cdeledu.util.database.model.TableProperty">
		SELECT
			table_name AS tableName,
			IFNULL(TABLE_COMMENT, table_name) AS tableComment
		FROM INFORMATION_SCHEMA.TABLES
		WHERE TABLE_TYPE LIKE '%table%' AND table_schema = 'db_wechat'
		ORDER BY table_name
	</select>
	
	
	<select id="getTableFrameWork" parameterType="java.lang.String" statementType="STATEMENT" 
		resultType="java.util.Map">
		SHOW CREATE TABLE ${_parameter}
	</select>
</mapper>